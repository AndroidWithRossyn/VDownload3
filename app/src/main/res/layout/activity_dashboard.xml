<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_splash"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@+id/bottom_navigation">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="2dp"
            android:singleLine="true"
            android:text="Welcome"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/welcome_thought"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="Good Experience Video download"
            android:textColor="#80FFFFFF"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/left_nav"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="5">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="25dp"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:src="@drawable/menu"
            app:tint="@color/white" />


        <TextView
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.9"
            android:gravity="center"
            android:rotation="270"
            android:text="HomePage"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homepage"
            android:layout_weight="1"
            android:gravity="center"
            android:rotation="270"
            android:text="Wallpaper"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/saved"
            android:layout_below="@id/wallpaper"
            android:layout_weight="1"
            android:gravity="center"
            android:rotation="270"
            android:text="Pro"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:rotation="270"
            android:text="Saved"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/rl1"
        android:layout_toRightOf="@+id/bottom_navigation">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame1"/>


    </LinearLayout>



</RelativeLayout>